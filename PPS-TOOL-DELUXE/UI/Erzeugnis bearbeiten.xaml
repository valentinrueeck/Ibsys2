<Window x:Name="ErzeugnisBearbeitenWindow" x:Class="PPS_TOOL_DELUXE.Utility.ErzeugnisBearbeiten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPS_TOOL_DELUXE"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Erzeugnis bearbeiten" Height="430" Width="360"  DataContext="{Binding Produces, Source={StaticResource Locator}}" d:DataContext="{Binding Produces, Source={StaticResource Locator}}">
    <Grid>
        <Label Content="Erzeugnis bearbeiten" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,18,95.333,0" FontSize="18" FontWeight="Bold" Width="238"/>
        <Label Content="Deutsche Bezeichnung*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,58,0,0" RenderTransformOrigin="0.393,0.423"/>
        <Label Content="Englische Bezeichnung*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,83,0,0"/>
        <Label Content="Französ. Bezeichnung*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,108,0,0"/>
        <Label Content="Anfangsbestand*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,133,0,0"/>
        <Label Content="Wert*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,158,0,0"/>
        <TextBox x:Name="TextBox_D_Bezeichung" HorizontalAlignment="Right" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Margin="0,58,19.333,0"
                 BorderBrush="DarkGoldenrod" Text="{Binding SelectedProduce.label.de}"/>
        <TextBox x:Name="TextBox_E_Bezeichung" HorizontalAlignment="Right" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Margin="0,83,19.333,0"
                 BorderBrush="DarkGoldenrod" Text="{Binding SelectedProduce.label.en}"/>
        <TextBox x:Name="TextBox_S_Bezeichnung" HorizontalAlignment="Right" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Margin="0,108,19.333,0"
                 BorderBrush="DarkGoldenrod" Text="{Binding SelectedProduce.label.fr}"/>
        <TextBox x:Name="TextBox_2_Schicht" HorizontalAlignment="Right" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Margin="0,158,19.333,0"
                 BorderBrush="DarkGoldenrod" Text="{Binding SelectedProduce.value}"/>
        <TextBox x:Name="Textbox_1_Schicht" HorizontalAlignment="Right" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Margin="0,133,19.333,0"
                 BorderBrush="DarkGoldenrod" Text="{Binding SelectedProduce.startAmount}"/>
        <Button x:Name="Schritt4_weiter" Content="Speichern" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,373,20.333,0"
                FontSize="10" BorderBrush="DarkGoldenrod" Background="Gold" Click="btn_speichern_Click"/>
        <Label Content="Pflichtfelder*" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,182,268.333,0" FontStyle="Italic" FontSize="10"/>
        <Label Content="Durchlaufene Arbeitsplätze*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,205,0,0" RenderTransformOrigin="0.667,7.308" FontSize="10"/>
        <Button x:Name="btn_plus" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Margin="20,338,0,0" FontSize="10" BorderBrush="#FFD4CCCC" RenderTransformOrigin="6.244,4.962" Click="btn_plus_Click"/>
        <Button x:Name="btn_minus" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Margin="138,338,0,0" FontSize="10" BorderBrush="#FFD4CCCC" RenderTransformOrigin="1.667,0.588" IsEnabled="False" Click="btn_minus_Click"/>
        <Label Content="Subkomponente*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="198,206,0,0" RenderTransformOrigin="0.667,7.308" FontSize="10"/>
        <Button x:Name="btn_plus_Subkomponente" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Margin="198,338,0,0" FontSize="10" BorderBrush="#FFD4CCCC" RenderTransformOrigin="-0.333,1.176" Click="btn_plus_Subkomponente_Click"/>
        <Button x:Name="btn_minus_Subkomponente" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Margin="318,338,0,0" FontSize="10" BorderBrush="#FFD4CCCC" RenderTransformOrigin="1.667,0.588" IsEnabled="False" Click="btn_minus_Subkomponente_Click"/>
        <DataGrid x:Name="produceWorkspacesGrid" HorizontalAlignment="Left" Height="100" Margin="20,233,0,0" VerticalAlignment="Top" Width="135" ItemsSource="{Binding SelectedProduce.timePerWorkplace, Mode=TwoWay}" AutoGenerateColumns="False" HorizontalScrollBarVisibility="Hidden" SelectionChanged="produceWorkspacesGrid_SelectionChanged" IsReadOnly="True" SelectionMode="Single" SelectedItem="{Binding SelectedProduceWorkspace, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}" ClipboardContentBinding="{x:Null}" Header="Nr." >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="Gold"/>
                            <Setter Property="FontSize" Value="8pt"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Width" Value="30"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding setUpTime}" ClipboardContentBinding="{x:Null}" Header="Rüstzeit" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="Gold"/>
                            <Setter Property="FontSize" Value="8pt"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Width" Value="50"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding time}" ClipboardContentBinding="{x:Null}" Header="Zeit" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="Gold"/>
                            <Setter Property="FontSize" Value="8pt"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Width" Value="55"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="produceComponentGrid" HorizontalAlignment="Right" Height="100" Margin="0,233,20.333,0" VerticalAlignment="Top" Width="135" ItemsSource="{Binding SelectedProduce.subComponentList, Mode=TwoWay}" AutoGenerateColumns="False" HorizontalScrollBarVisibility="Hidden" SelectionChanged="produceComponentGrid_SelectionChanged" IsReadOnly="True" SelectionMode="Single" SelectedItem="{Binding SelectedProduceSubcomponent, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}" ClipboardContentBinding="{x:Null}" Header="Nr." >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="Gold"/>
                            <Setter Property="FontSize" Value="8pt"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Width" Value="30"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding typ}" ClipboardContentBinding="{x:Null}" Header="Typ" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="Gold"/>
                            <Setter Property="FontSize" Value="8pt"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Width" Value="30"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding need}" ClipboardContentBinding="{x:Null}" Header="Anzahl" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="Gold"/>
                            <Setter Property="FontSize" Value="8pt"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Width" Value="50"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
