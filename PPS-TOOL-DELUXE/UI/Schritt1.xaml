        <Label Content="P3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,138,0,0" RenderTransformOrigin="1.13,0.962" FontSize="9" Height="21"/>
        <Label Content="P2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,118,0,0" RenderTransformOrigin="1.13,0.962" FontSize="9" Height="27"/>
        <Label Content="Verkaufswunsch" RenderTransformOrigin="0.618,-0.682" Margin="53,73,0,0" TextOptions.TextHintingMode="Fixed" FontStyle="Italic" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Transparent"/>
        <Label Content="Vorhersage1" RenderTransformOrigin="0.618,-0.682" Margin="110,208,0,0" TextOptions.TextHintingMode="Fixed" FontStyle="Italic" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top"/>
