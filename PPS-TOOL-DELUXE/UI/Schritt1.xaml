        <Label Content="P3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="169,139,0,0" RenderTransformOrigin="1.13,0.962" FontSize="9" Height="21"/>
        <Label Content="P2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="169,119,0,0" RenderTransformOrigin="1.13,0.962" FontSize="9" Height="27"/>
        <Label Content="Menge" RenderTransformOrigin="0.618,-0.682" Margin="215,72,0,0" TextOptions.TextHintingMode="Fixed" FontStyle="Italic" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top"/>
